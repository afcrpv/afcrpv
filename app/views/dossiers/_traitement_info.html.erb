<div class='traitement-info form-section'>
  <h4>Traitement au moment de l'évènement</h4>
  <div class="row-fluid">
    <div class="span8">
      Médicament
    </div>
    <div class="span3">
      Durée de traitement
    </div>
    <div class="span1">
    </div>
  </div>
  <div id="traitements">
    <%= f.simple_fields_for :traitements do |traitement| %>
      <%= render "traitement_fields", f: traitement %>
    <% end -%>
    <div class="links">
      <%= link_to_add_association "<i class='icon-plus'></i> Rajouter un traitement".html_safe, f, :traitements, class: "btn" %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
      <%= f.input :contraception_ant, as: :select, collection: Dossier::ONI %>
    </div>
    <div class="span4 contraception-field" style="display: none;">
      <%= f.input :contraception_age, input_html: {class: "span3"} %>
    </div>
  </div>
  <div class="row-fluid contraception-field">
    <div class="span4">
      Contraceptif
    </div>
    <div class="span8">
      Durée de traitement
    </div>
  </div>
  <% (1..3).each do |i| %>
  <div class="row-fluid contraception-field">
    <div class="span4">
      <%= f.input :"contraception_#{i}", label: false, input_html: {class: "input-block-level"} %>
    </div>
    <div class="span3">
      <%= f.input_field :"contraception_#{i}_duree_comp", collection: Dossier::DUREE_COMP , class: "span4"%>
      <%= f.input_field :"contraception_#{i}_duree", type: :number, class: "span4 duree-traitement" %>
      <%= f.input_field :"contraception_#{i}_duree_unite", collection: %w(jours mois années), class: "span4 duree-traitement" %>
    </div>
  </div>
  <% end -%>
  <%= f.input :concomitants, as: :select, collection: Dossier::ONI %>
  <div class="row-fluid concomitant-field">
    <div class="span4">
      Médicament
    </div>
    <div class="span8">
      Durée de traitement
    </div>
  </div><!-- row-fluid concomitant-field -->
  <% (1..3).each do |i| %>
  <div class="row-fluid concomitant-field">
    <div class="span4">
      <%= f.input :"concomitant_#{i}", label: false, input_html: {class: "input-block-level"} %>
    </div>
    <div class="span3">
      <%= f.input_field :"concomitant_#{i}_duree_comp", collection: Dossier::DUREE_COMP , class: "span4"%>
      <%= f.input_field :"concomitant_#{i}_duree", type: :number, class: "span4 duree-traitement" %>
      <%= f.input_field :"concomitant_#{i}_duree_unite", collection: %w(jours mois années), class: "span4 duree-traitement" %>
    </div>
  </div><!-- row-fluid concomitant-field -->
  <% end -%>
  <div class="row-fluid">
    <div class="span4">
      <%= f.input :contraception_apres, as: :select, collection: Dossier::CONTRACEPTION_APRES, input_html: {class: "span10"} %>
    </div>
    <div class="span8 contraception-quoi">
      <%= f.input :contraception_quoi, input_html: {class: "input-block-level"} %>
    </div>
  </div><!-- row-fluid -->
</div>
