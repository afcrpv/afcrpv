<%= simple_form_for(dossier, html: {class: "form-vertical"}) do |f| %>
  <%= f.input :refinery_crpv_id, as: :hidden %>
  <%= f.input :enquete_id, as: :hidden %>
  <div class="row-fluid">
    <div class="span4">
      <%= f.input :code_bnpv %>
    </div>
    <div class="span4">
      <%= f.input :date_recueil, input_html: {class: "span3"} %>
    </div>
    <div class="span4">
      <%= f.input :doublon, as: :radio, collection: %w(Oui Non), item_wrapper_class: "inline", hint: "(cas déjà notifié au CRPV)" %>
    </div>
  </div>
  <h3>Patient</h3>
  <div class="row-fluid">
    <%= f.simple_fields_for :patient do |pf| %>
      <% %w(age poids taille imc).each do |field| %>
      <div class="span3">
        <%= pf.input :"#{field}", input_html: {class: "span4"} %>
      </div>
      <% end -%>
    <% end -%>
  </div>
  <%= f.association :evenement, collection: evenements, prompt: "Choisir un évènement", input_html: {class: "input-block-level"} %>
  <%= f.input :comm_evenement, input_html: {class: "input-block-level", rows: 3}, hint: "Attention ! Pas de données nominatives directes ou indirectes dans ce champ." %>
  <div class="row-fluid">
    <div class="span4">
      <div class="control-group">
        <%= f.label :j_evenement, "Date de l'évenèment", class: "control-label" %>
        <div class="controls controls-row">
          <% %w(j m a).each do |prefix| %>
            <%= f.text_field :"#{prefix}_evenement", class: "span3", placeholder: prefix*2 %>
          <% end -%>
        </div>
      </div>
    </div>
    <div class="span4">
      <%= f.input :gravite, as: :radio_buttons, collection: Dossier::GRAVITE %>
    </div>
    <div class="span4">
      <%= f.input :evolution, as: :radio_buttons, collection: Dossier::EVOLUTION %>
    </div>
  </div>
  <h3>Traitement au moment de l'évènement</h3>
  <div class="row-fluid">
    <div class="span3">
      Médicament
    </div>
    <div class="span4">
      Début de traitement
    </div>
    <div class="span4">
      Fin de traitement
    </div>
    <div class="span1">
    </div>
  </div>
  <div id="traitements">
    <%= f.simple_fields_for :traitements do |traitement| %>
      <%= render "traitement_fields", f: traitement %>
    <% end -%>
    <div class="links">
      <%= link_to_add_association "<i class='icon-plus'></i> Rajouter un traitement".html_safe, f, :traitements, class: "btn" %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
      <%= f.input :contraception_ant, as: :select, collection: Dossier::ONI %>
    </div>
    <div class="span4 contraception-field" style="display: none;">
      <%= f.input :contraception_age, input_html: {class: "span3"} %>
    </div>
  </div>
  <div class="row-fluid contraception-field">
    <div class="span4">
      Contraceptif
    </div>
    <div class="span4">
      du
    </div>
    <div class="span4">
      au
    </div>
  <% (1..3).each do |i| %>
    <div class="row-fluid contraception-field">
      <div class="span4">
        <%= f.input :"contraception_#{i}", label: false %>
      </div>
      <div class="span4">
        <%= f.input :"contraception_#{i}_du", label: false, input_html: {class: "span4"}, include_blank: true %>
      </div>
      <div class="span4">
        <%= f.input :"contraception_#{i}_au", label: false, input_html: {class: "span4"}, include_blank: true %>
      </div>
    </div>
  <% end -%>
  <%= f.input :concomitants, as: :select, collection: Dossier::ONI %>
  <div class="row-fluid concomitant-field">
    <div class="span4">
      Médicament
    </div>
    <div class="span4">
      du
    </div>
    <div class="span4">
      au
    </div>
  <% (1..3).each do |i| %>
    <div class="row-fluid concomitant-field">
      <div class="span4">
        <%= f.input :"concomitant_#{i}", label: false %>
      </div>
      <div class="span4">
        <%= f.input :"concomitant_#{i}_du", label: false, input_html: {class: "span4"}, include_blank: true %>
      </div>
      <div class="span4">
        <%= f.input :"concomitant_#{i}_au", label: false, input_html: {class: "span4"}, include_blank: true %>
      </div>
    </div>
  </div>
  <% end -%>
  <div class="row-fluid">
    <div class="span4">
      <%= f.input :contraception_apres, as: :select, collection: Dossier::CONTRACEPTION_APRES, input_html: {class: "span10"} %>
    </div>
    <div class="span8 contraception-quoi">
      <%= f.input :contraception_quoi, input_html: {class: "input-block-level"} %>
    </div>
  </div>
  <%= f.input :commentaire, input_html: {class: "input-block-level"}, hint: "Attention ! Pas de données nominatives directes ou indirectes dans ce champ." %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end -%>
