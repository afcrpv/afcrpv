<%= simple_form_for @medicament, html: {class: "form-horizontal"} do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, input_html: {class: "input-xlarge"} %>
  <%= f.input :classe, input_html: {class: "input-xlarge"} %>
  <%= f.input :forme, input_html: {class: "input-xlarge"} %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
