<%= simple_form_for @enquete, html: {class: "form-vertical"} do |f| %>
  <%= f.hidden_field :entity_type %>
  <%= f.input :name, input_html: {class: "input-xxlarge", placeholder: "Nom"} %>
  <%= f.input :description, input_html: {class: "input-block-level", rows: 1} %>
  <% %w(evenement medicament).each do |field| %>
    <div class="control-group">
      <%= f.label :"#{field}_list", class: "control-label" %>
      <div class="controls">
        <%= f.text_area :"#{field}_list", class: "input-block-level", rows: 3, placeholder: "mots séparés par virgule" %>
      </div>
    </div>
  <% end -%>
  <h3>Champs personnalisés</h3>
  <div id="fields">
    <%= f.simple_fields_for :hydra_attributes do |field| %>
      <%= render "hydra_attribute_fields", f: field %>
    <% end -%>
    <div class="links">
      <%= link_to_add_association "<i class='icon-plus'></i> Rajouter un champ".html_safe, f, :hydra_attributes, class: "btn" %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Sauvegarder" %>
  </div>
<% end -%>
