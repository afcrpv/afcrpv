%ul.breadcrumb
  %li
    = link_to "/" do
      %i.icon-home
      Accueil
    %span.divider &gt;
  - @page.self_and_ancestors.each do |p|
    %li{class: p.id == @page.id ? "active" : nil}
      = link_to_unless (condition = p.id == @page.id), p.refinery_menu_title, p.nested_path
      - unless condition
        %span.divider &gt;
