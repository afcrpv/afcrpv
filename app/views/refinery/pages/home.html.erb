<div class="hero-unit hidden-phone hidden-tablet">
  <div class="hero-logo span2">
    <%= image_tag("logo-afcrpv.png") %>
  </div>
  <div class="hero-text span10">
    <h1>AFCRPV</h1>
    <h3><%= Refinery::Core.site_name %></h3>
  </div>
</div>
<div class="top-sections">
  <div class="row-fluid">
    <ul class="thumbnails">
      <li class="span4">
        <div class="thumbnail">
          <h3>
            <a href="/ressources/la-pharmacovigilance" class="btn btn-large btn-block btn-primary">
              <i class="icon-info-sign icon-white"></i>
              La Pharmacovigilance
            </a>
          </h3>
          <p>Organisation, historique, règlementation.</p>
        </div>
      </li>
      <li class="span4">
        <div class="thumbnail">
          <h3>
            <a href="/ressources/declarations" class="btn btn-large btn-block btn-danger">
              <i class="icon-exclamation-sign icon-white"></i>
              Déclarer un effet indésirable
            </a>
          </h3>
          <p>
            Pourquoi, quoi et comment déclarer.
            <a href="/cerfa_10011-03.pdf" class="btn btn-small btn-block">
              <i class="icon-download"></i>
              Télécharger la fiche CERFA en PDF
            </a>
          </p>
        </div>
      </li>
      <li class="span4">
        <div class="thumbnail">
          <h3>
            <a href="/contact" class="btn btn-large btn-block btn-info">
              <i class="icon-question-sign icon-white"></i>
              Poser une question de pharmacovigilance
            </a>
          </h3>
          <p>
            Comment contacter votre CRPV de référence.
            <%= link_to "#carte-france", role: "button", "data-toggle" => "modal", class: "btn btn-small btn-block" do %>
              <i class="icon-globe"></i>
              Choisir un CRPV sur la carte
            <% end -%>
          </p>
        </div>
      </li>
    </ul>
  </div>
</div>

<hr>

