<%= simple_form_for(@evenement, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, input_html: {class: "input-block-level"} %>
  <%= f.input :ev_type, input_html: {class: "input-block-level"} %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
