<%= form_for [refinery, :agences_admin, @agence] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @agence,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>
  </div>

  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description  -%>
  </div>

  <div class='field'>
    <%= f.label :feed_url -%>
    <%= f.text_field :feed_url  -%>
  </div>

  <div class='field'>
    <%= f.label :show_on_home, "Montrer dans la page d'accueil ?" -%>
    <%= f.check_box :show_on_home, :checked => @agence[:show_on_home]  -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.agences.admin.agences.agence'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @agence.name) %>
<% end -%>
