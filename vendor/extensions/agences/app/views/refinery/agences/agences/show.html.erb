<% content_for :body_content_title do %>
  <%= @agence.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @agence.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @agence.description %>
    </p>
  </section>
  <section>
    <h1>Feed Url</h1>
    <p>
      <%=raw @agence.feed_url %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="agences">
      <% @agences.each do |agence| %>
        <li>
          <%= link_to agence.name, refinery.agences_agence_path(agence) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
