<% content_for :body_content_title do %>
  <%= @agence.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h2>
      <%=raw @agence.description %>
    </h2>
  </section>
  <hr>
  <section>
    <% if @agence.feeds -%>
      <ul>
        <% @agence.feeds(-1).each do |feed| -%>
          <li>
          <%= link_to feed.title, feed.link, target: "_BLANK" %>
          </li>
        <% end -%>
    <% else %>
      Aucune actualit√©
    <% end %>

  </section>
<% end %>

<%= render '/refinery/content_page' %>
