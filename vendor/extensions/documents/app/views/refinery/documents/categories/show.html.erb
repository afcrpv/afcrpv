<% content_for :body_content_title do %>
  <%= @category.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @category.name %>
    </p>
  </section>
  <section>
    <h1>Parent</h1>
    <p>
      <%=raw @category.parent_id %>
    </p>
  </section>
  <section>
    <h1>Lft</h1>
    <p>
      <%=raw @category.lft %>
    </p>
  </section>
  <section>
    <h1>Rgt</h1>
    <p>
      <%=raw @category.rgt %>
    </p>
  </section>
  <section>
    <h1>Depth</h1>
    <p>
      <%=raw @category.depth %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="categories">
      <% @categories.each do |category| %>
        <li>
          <%= link_to category.name, refinery.documents_category_path(category) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
