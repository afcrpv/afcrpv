<%= simple_form_for([refinery, :documents, category], :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.input :name, input_html: {class: "input-xxlarge"} %>
  <%= f.association :parent, input_html: {class: "input-xxlarge"} %>
  <div class="form-actions">
    <%= f.button :submit, "Soumettre" %>
  </div>
<% end %>
