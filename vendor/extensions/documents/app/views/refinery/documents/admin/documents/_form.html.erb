<%= form_for [refinery, :documents_admin, @document] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @document,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :titre -%>
    <%= f.text_field :titre, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :publication -%>
    <%= f.date_select :publication  -%>

  </div>
  
  <div class='field'>
    <%= f.label :document_category_id -%>
    <%= f.collection_select :document_category_id, Refinery::Documents::Category.all, :id, :name, prompt: "Selectionner une catÃ©gorie parent" %>

  </div>
  
  <div class='field'>
    <%= f.label :fichier -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :fichier_id,
               :resource => @document.fichier %>

  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.documents.admin.documents.document'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @document.titre) %>
<% end -%>
