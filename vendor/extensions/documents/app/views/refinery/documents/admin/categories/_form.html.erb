<%= form_for [refinery, :documents_admin, @category] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @category,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>

  <div class='field'>
    <%= f.label :parent_id -%>
    <%= f.collection_select :parent_id, @all_but_self_and_children, :id, :name, prompt: "Selectionner une catÃ©gorie parent" %>

  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.categories.admin.categories.category'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @category.name) %>
<% end -%>
