<%= form_for [refinery, :documents_admin, @category] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @category,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :parent_id -%>
    <%= f.number_field :parent_id  -%>

  </div>
  
  <div class='field'>
    <%= f.label :lft -%>
    <%= f.number_field :lft  -%>

  </div>
  
  <div class='field'>
    <%= f.label :rgt -%>
    <%= f.number_field :rgt  -%>

  </div>
  
  <div class='field'>
    <%= f.label :depth -%>
    <%= f.number_field :depth  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.categories.admin.categories.category'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @category.name) %>
<% end -%>
