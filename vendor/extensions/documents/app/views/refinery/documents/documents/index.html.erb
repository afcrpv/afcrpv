<% content_for :body do %>
  <table class="table table-condensed table-striped documents">
    <thead>
      <tr>
        <th>Titre</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= document.titre %></td>
          <td><%= link_to document.fichier.file_name, document.fichier.url %></td>
        </tr>
      <% end %>
    </tbody>
  </ul>
  <%= link_to "Nouveau document", refinery.new_documents_document_path if current_refinery_user.has_role?("documents") || current_refinery_user.is_admin? %>
<% end %>

<%= render '/refinery/content_page' %>
