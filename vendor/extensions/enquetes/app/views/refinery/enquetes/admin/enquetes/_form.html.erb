<%= form_for [refinery, :enquetes_admin, @enquete] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @enquete,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :code_bnpv -%>
    <%= f.text_field :code_bnpv, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :date_recueil -%>
    <%= f.date_select :date_recueil  -%>

  </div>
  
  <div class='field'>
    <%= f.label :doublon -%>
    <%= f.check_box :doublon, :checked => @enquete[:doublon]  -%>

  </div>
  
  <div class='field'>
    <%= f.label :j_evenement -%>
    <%= f.number_field :j_evenement  -%>

  </div>
  
  <div class='field'>
    <%= f.label :m_evenement -%>
    <%= f.number_field :m_evenement  -%>

  </div>
  
  <div class='field'>
    <%= f.label :a_evenement -%>
    <%= f.number_field :a_evenement  -%>

  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:comm_evenement, :commentaire].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/enquetes/enquete", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:comm_evenement, :commentaire].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class='field'>
    <%= f.label :gravite -%>
    <%= f.text_field :gravite  -%>

  </div>
  
  <div class='field'>
    <%= f.label :evolution -%>
    <%= f.text_field :evolution  -%>

  </div>
  
  <div class='field'>
    <%= f.label :j_evolution -%>
    <%= f.number_field :j_evolution  -%>

  </div>
  
  <div class='field'>
    <%= f.label :m_evolution -%>
    <%= f.number_field :m_evolution  -%>

  </div>
  
  <div class='field'>
    <%= f.label :a_evolution -%>
    <%= f.number_field :a_evolution  -%>

  </div>
  

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.enquetes.admin.enquetes.enquete'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @enquete.code_bnpv) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
