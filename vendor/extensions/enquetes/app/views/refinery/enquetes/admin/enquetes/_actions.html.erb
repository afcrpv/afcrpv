<ul>
  <% if ::Refinery::Enquetes::Admin::EnquetesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.enquetes_admin_enquetes_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_enquetes_admin_enquete_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Enquetes::Admin::EnquetesController.sortable? && ::Refinery::Enquetes::Enquete.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Enquetes"),
                 refinery.enquetes_admin_enquetes_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Enquetes"),
                 refinery.enquetes_admin_enquetes_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
