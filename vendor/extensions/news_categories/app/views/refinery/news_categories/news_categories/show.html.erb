<% content_for :body_content_title do %>
  <%= @news_category.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @news_category.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="news_categories">
      <% @news_categories.each do |news_category| %>
        <li>
          <%= link_to news_category.name, refinery.news_categories_news_category_path(news_category) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
