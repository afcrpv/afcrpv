<%= content_for :body do %>
  <%= raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) if Refinery::Pages.default_parts.any? %>

  <div class='projets'>
    <%= simple_form_for([refinery, :projets, @projet], :html => {:class => 'form-horizontal' }) do |f| %>
      <%= f.input :refinery_crpv, as: :hidden %>
      <%= f.input :titre, input_html: {class: "input-xxlarge"} %>
      <%= f.input :but %>
      <%= f.input :responsable %>
      <%= f.input :exploitant %>
      <%= f.input :date_requete, input_html: {class: "input-small"}, use_month_numbers: true %>
      <%= f.input :design %>
      <%= f.input :objectif, input_html: {class: "input-xxlarge", rows: 2} %>
      <%= f.input :objectif_sec, input_html: {class: "input-xxlarge", rows: 2} %>
      <%= f.input :champs, input_html: {class: "input-xxlarge", rows: 2} %>
      <%= f.input :debut_inclusion, input_html: {class: "input-small"}, use_month_numbers: true %>
      <%= f.input :fin_inclusion, input_html: {class: "input-small"}, use_month_numbers: true %>
      <%= f.input :type_inclusion, collection: Refinery::Projets::Projet::TYPE_INCLUSION %>
      <%= f.input :criteres_inclusion, input_html: {class: "input-xxlarge", rows: 2} %>
      <%= f.input :criteres_non_inclusion, input_html: {class: "input-xxlarge", rows: 2} %>
      <%= f.input :retombees, input_html: {class: "input-xxlarge", rows: 2} %>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
<% end %>

<%= render :partial => "/refinery/content_page" %>
