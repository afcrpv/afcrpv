<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(projet) -%>">
  <span class='title'>
    <%= truncate(projet.name, :length => 60) -%>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag('delete.png'), refinery.projets_admin_projet_path(projet),
                :class => "cancel confirm-delete",
                :title => t('.delete'),
                :data => {
                  :confirm => t('.message', :scope => 'refinery.admin.delete', :title => projet.name)
                },
                :method => :delete -%>
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_projets_admin_projet_path(projet),
         :title => t('.edit') %>

    <%= link_to refinery_icon_tag('zoom.png'), refinery.projets_admin_projet_path(projet),
                :title => t('.show') -%>

  </span>
</li>
