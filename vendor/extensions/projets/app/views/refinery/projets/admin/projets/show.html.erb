<div id='actions'>
  <h2><%= t('.details')%></h2>
  <p>
    <strong><%= t('.age') %>:</strong> <%= time_ago_in_words(@projet.created_at) %>
  </p>
  <% if @projet.spam? %>
    <p>
      <strong><%= t('.spam') %>:</strong> <%= t('.spam_yes') %>
    </p>
  <% end %>
  <h2><%= t('.actions') %></h2>
  <ul>
    <li>
      <%= link_to t('.back_to_all_projets'),
                  refinery.projets_admin_projets_path,
                  :class => "back_icon" %>
    </li>
    <li>
      <%= link_to t('refinery.projets.admin.projets.delete'),
                  refinery.projets_admin_projet_path(@projet),
                  :class => 'delete_icon no-tooltip confirm-delete',
                  :title => t('refinery.projets.admin.projets.delete'),
                  :data => {
                    :confirm => t('refinery.admin.delete.message', :title => @projet.name)
                  },
                  :method => :delete %>
    </li>
  </ul>
</div>
<div id='records'>
  <h2><%= t('.projet') %></h2>
  <table id='projet'>
    <tr>
      <td>
        <strong><%= t('.to') %></strong>
      </td>
      <td>
        <%= Refinery::Core.config.site_name %>
      </td>
    </tr>
    <tr>
      <td>
        <strong><%= t('.from') %></strong>
      </td>
      <td>
        <%= @projet.name %> [<%= mail_to @projet.email, @projet.email, {:title => t('.click_to_email')} %>]
      </td>
    </tr>
    <% unless @projet.phone.blank? %>
      <tr>
        <td>
          <strong><%= t('.phone') %></strong>
        </td>
        <td>
          <%= @projet.phone %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>
        <strong><%= t('.date') %></strong>
      </td>
      <td>
        <%= l(Date.parse(@projet.created_at.to_s), :format => :long) %>
      </td>
    </tr>
    <tr>
      <td valign='top'>
        <strong><%= t('.message') %></strong>
      </td>
      <td>
        <%= simple_format strip_tags(@projet.message), :style => 'margin-top: 0' %>
      </td>
    </tr>
  </table>
</div>
