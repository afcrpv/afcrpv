<%= render :partial => "submenu" %>
<div id='records'>
  <% if searching? %>
    <h2><%= t('refinery.admin.search.results_for', :query => params[:search]) %></h2>
    <% if @projets.any? %>
      <%= will_paginate @projets %>
      <ul>
        <%= render :partial => "projet", :collection => @projets %>
      </ul>
      <%= will_paginate @projets %>
    <% else %>
      <p><%= t('refinery.admin.search.no_results') %></p>
    <% end %>
  <% else %>
    <% if @projets.any? -%>
      <%= will_paginate @projets %>
      <% group_by_date(@projets).each do |container| %>
        <h3><%= l((projet_group = container.last).first.created_at, :format => :short) %></h3>
        <ul>
          <%= render :partial => 'projet', :collection => projet_group %>
        </ul>
      <% end %>
      <%= will_paginate @projets %>
    <% else -%>
      <p>
        <strong><%= t(".no_#{action_name == 'index' ? 'projets' : 'spam'}") %></strong>
      </p>
    <% end -%>
  <% end %>
</div>
