= content_for :body do
  .emplois
    = form_for [refinery, :emplois, @emploi] do |f|
      = render "/refinery/admin/error_messages", object: @emploi, include_object_name: true
      .field
        = f.required_label :organisation, class: "placeholder-fallback"
        = f.text_field :organisation, class: "text", required: 'required'
      .field
        = f.required_label :name, class: "placeholder-fallback"
        = f.text_field :name, class: "text", required: 'required'
      .field
        = f.required_label :email, class: "placeholder-fallback"
        = f.text_field :email, class: "text email", required: 'required'
      .field
        = f.required_label :telephone, class: "placeholder-fallback"
        = f.text_field :telephone, class: "text phone", required: 'required'
      .field
        = f.required_label :address, class: "placeholder-fallback"
        = f.text_area :address, rows: 2, required: 'required'
      .field
        = f.required_label :title, class: "placeholder-fallback"
        = f.text_field :title, class: "text", required: 'required'
      .field
        = f.required_label :description, class: "placeholder-fallback"
        = f.text_area :description, rows: 8, required: 'required'
      .field
        = f.required_label :expires_on, class: "placeholder-fallback"
        = f.date_select :expires_on, class: "date", required: 'required'
      .field
        = f.label :attachment
        = f.file_field :attachment
      .actions
        = f.submit "Envoyer"
= render "/refinery/content_page"
