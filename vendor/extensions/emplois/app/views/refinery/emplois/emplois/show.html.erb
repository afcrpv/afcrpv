<% content_for :body_content_title do %>
  <%= @emploi.organisation %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Organisation</h1>
    <p>
      <%=raw @emploi.organisation %>
    </p>
  </section>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @emploi.name %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @emploi.email %>
    </p>
  </section>
  <section>
    <h1>Telephone</h1>
    <p>
      <%=raw @emploi.telephone %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @emploi.address %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @emploi.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @emploi.description %>
    </p>
  </section>
  <section>
    <h1>Expires On</h1>
    <p>
      <%=raw @emploi.expires_on %>
    </p>
  </section>
  <section>
    <h1>Attachment</h1>
    <p>
      <% if @emploi.attachment.present? %>
        <%= link_to 'attachment', @emploi.attachment.url %>
      <% else %>
        attachment
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="emplois">
      <% @emplois.each do |emploi| %>
        <li>
          <%= link_to emploi.organisation, refinery.emplois_emploi_path(emploi) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
