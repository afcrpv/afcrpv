<% content_for :body_content_title do %>
  <%= @emploi.title %>
<% end %>

<% content_for :body do %>
  <dl class="dl-horizontal emploi">
    <% %w(description organisation name email telephone address).each do |field| -%>
      <dt><%= t(field, :scope => 'activerecord.attributes.refinery/emplois/emploi') %></dt>
      <dd><%= raw @emploi.send(field) %></dd>
    <% end -%>

    <dt><%= t("expires_on", :scope => 'activerecord.attributes.refinery/emplois/emploi') %></dt>
    <dd><%= l(@emploi.expires_on) %></dd>
    <dt><%= t("attachment", :scope => 'activerecord.attributes.refinery/emplois/emploi') %></dt>
    <dd>
      <% if @emploi.attachment.present? %>
        <%= link_to @emploi.attachment.file_name, @emploi.attachment.url %>
      <% else %>
        Aucune.
      <% end %>
    </dd>
  </dl>
<% end %>

<%= render '/refinery/content_page' %>
