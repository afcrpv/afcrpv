<ul>
  <% if ::Refinery::Emplois::Admin::EmploisController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.emplois_admin_emplois_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_emplois_admin_emploi_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Emplois::Admin::EmploisController.sortable? && ::Refinery::Emplois::Emploi.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Emplois"),
                 refinery.emplois_admin_emplois_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Emplois"),
                 refinery.emplois_admin_emplois_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
