<%= form_for [refinery, :emplois_admin, @emploi] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @emploi,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :organisation -%>
    <%= f.text_field :organisation, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name  -%>

  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email  -%>

  </div>
  
  <div class='field'>
    <%= f.label :telephone -%>
    <%= f.text_field :telephone  -%>

  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:address].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/emplois/emploi", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:address].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title  -%>

  </div>
  
  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description  -%>

  </div>
  
  <div class='field'>
    <%= f.label :expires_on -%>
    <%= f.date_select :expires_on  -%>

  </div>
  
  <div class='field'>
    <%= f.label :attachment -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :attachment_id,
               :resource => @emploi.attachment %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.emplois.admin.emplois.emploi'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @emploi.organisation) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
