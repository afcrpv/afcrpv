<%= content_for :body_content_title do %>
  <h1>Paris et région parisienne</h1>
<% end %>

<%= content_for :body do %>
 <table class="table table-bordered paris">
   <thead>
     <tr>
       <th colspan=<%= @paris_crpvs.count %>>Paris</th>
       <th>Créteil</th>
     </tr>
   </thead>
   <tbody>
     <tr>
       <% @paris_crpvs.each do |crpv| %>
         <td><%= link_to crpv[1], refinery.crpvs_crpv_path(id: "paris-#{crpv[0]}") %></td>
       <% end -%>
       <td><%= link_to "Henri Mondor", refinery.crpvs_crpv_path(id: "creteil") %></td>
     </tr>
  </tbody>
 </table>
<% end %>

<%= render '/refinery/content_page' %>
