<% content_for :body do %>
  <div class="row-fluid">
    <div class="span6">
      <%= link_to "#carte-france", role: "button", "data-toggle" => "modal", class: "btn btn-small btn-block" do %>
        <i class="icon-globe"></i>
        Choisir un departement ou une ville sur la carte
      <% end -%>
    </div>
    <div class="span6">
      <%= form_tag refinery.crpvs_search_path, remote: true, method: :get, class: "form-search" do %>
        <%= hidden_field_tag :dep, "", class: "span10 search-query" %>
      <% end -%>
      <br>
      <div id="chosen_crpv_link"></div>
    </div>
  </div>
  <h3>Liste des CRPVs</h3>
  <table id="crpvs" class="table table-condensed table-bordered">
    <% @crpvs.in_groups_of(6) do |crpvs| %>
      <tr>
        <% crpvs.each do |crpv| %>
          <td>
            <%= link_to crpv.name, refinery.crpvs_crpv_path(crpv) if crpv %>
          </td>
        <% end -%>
      </tr>
    <% end %>
  </table>
<% end %>

<%= render '/refinery/pages/france' %>
<%= render '/refinery/content_page' %>
