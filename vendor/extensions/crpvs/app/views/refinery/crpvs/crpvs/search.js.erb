<% if params[:dep] == "75" %>
  window.location = "/crpvs/paris";
<% else %>
  html = ""
  <% if @crpv %>
    html += "Le CRPV de référence pour ce département est : <%= j link_to(@crpv.name, refinery.crpvs_crpv_path(@crpv)) %>";
  <% else %>
    html += "Aucun CRPV pour ce département.";
  <% end -%>
  $("#chosen_crpv_link").html(html);
<% end -%>
