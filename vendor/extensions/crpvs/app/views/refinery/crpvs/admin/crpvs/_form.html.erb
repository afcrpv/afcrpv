<%= form_for [refinery, :crpvs_admin, @crpv] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @crpv,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :adresse -%>
    <%= f.text_field :adresse, :class => 'widest'  -%>

  </div>

  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>

  </div>
  
  <div class='field'>
    <%= f.label :cp -%>
    <%= f.text_field :cp  -%>

  </div>
  
  <div class='field'>
    <%= f.label :responsable -%>
    <%= f.text_field :responsable  -%>

  </div>
  
  <div class='field'>
    <%= f.label :tel -%>
    <%= f.text_field :tel  -%>

  </div>
  
  <div class='field'>
    <%= f.label :fax -%>
    <%= f.text_field :fax  -%>

  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email  -%>

  </div>
  
  <div class='field'>
    <%= f.label :website -%>
    <%= f.text_field :website, class: "widest"  -%>

  </div>
  
  <div class='field'>
    <%= f.label :bulletin -%>
    <%= f.text_field :bulletin, class: "widest"  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.crpvs.admin.crpvs.crpv'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @crpv.name) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
